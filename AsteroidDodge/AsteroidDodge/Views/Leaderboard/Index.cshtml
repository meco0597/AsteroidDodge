@model List<Leaderboard>

<h1 class="text-white">Leaderboard</h1>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">User</th>
            <th scope="col">Score</th>
        </tr>
    </thead>

    <tbody>
        @{
            int count = 0;
        }
        @foreach (Leaderboard lb in Model)
        {
            count++;
            var name = lb.AsteroidUser.UserName.Substring(0, lb.AsteroidUser.UserName.LastIndexOf('@'));
            var score = lb.Score;

            <tr>
                <th scope="row">@count</th>
                <td>@name</td>
                <td>@score</td>
            </tr>
        }
    </tbody>
</table>